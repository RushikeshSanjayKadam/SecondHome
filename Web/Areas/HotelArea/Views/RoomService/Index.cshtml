@model IEnumerable<RoomService>

<div class="col-12 mx-auto">
    <div class="card">
        <div class="card-content">
            <!-- table striped -->
            <div class="table-responsive">

                <br />
                <h5 class="card-title text-center text-info">RoomServices</h5>

                <a class="btn btn-outline-primary w-25" asp-action="Create"> Create </a>
                <table class="table table-bordered mb-0">
                    <thead>
                        <tr>
                            <th scope="col">Sr.No.</th>
                            <th scope="col">RoomServiceName</th>
                            <th scope="col">RoomServicePrice</th>
                            <th scope="col">RoomCategory</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int srno = 1;
                        }
                        @foreach (var temp in Model)
                        {
                            <tr>
                                <td scope="row">@srno</td>
                                <td>@temp.RoomServiceName</td>
                                <td>@temp.RoomServicePrice</td>
                                <td>@temp.RoomCategory.RoomCategoryName</td>
                                <td>
                                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@temp.RoomServiceID">Edit</a>
                                    |
                                    <a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@temp.RoomServiceID">Delete</a>
                                </td>
                            </tr>
                            srno++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>